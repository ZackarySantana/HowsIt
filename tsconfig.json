{
    "extends": "astro/tsconfigs/strict",
    "exclude": ["node_modules", "dist", "public"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "preserve",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@examples/*": ["src/examples/*"],
            "@alpinejs/*": ["src/examples/alpinejs/*"],
            "@astro/*": ["src/examples/astro/*"],
            "@lit/*": ["src/examples/lit/*"],
            "@preact/*": ["src/examples/preact/*"],
            "@react/*": ["src/examples/react/*"],
            "@solid/*": ["src/examples/solid/*"],
            "@svelte/*": ["src/examples/svelte/*"],
            "@vue/*": ["src/examples/vue/*"]
        }
    }
}
