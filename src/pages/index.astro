---
import Layout from "@layouts/Layout.astro";

import Link from "@components/link.astro";
import Alpine from "@tests/alpinejs.astro";
import AstroComponent from "@tests/astro.astro";
import Lit from "@tests/lit";
import Preact from "@tests/preact";
import React from "@tests/react";
import Solid from "@tests/solidjs";
import Svelte from "@tests/svelte.svelte";
import Vue from "@tests/vue.vue";

export const prerender = true;
---

<Layout title="Astro Health">
    <main>
        <Link path="">GitHub</Link>
        <h1><span>SSR</span> Only</h1>
        <AstroComponent />
        <Alpine />

        <h1><span>Server-Side</span> Rendered</h1>
        <Link path="src/tests/preact.tsx">Hello world from</Link>
        <Preact />
        <br />
        <Link path="src/tests/react.tsx">Hello world from</Link>
        <React />
        <br />
        <Link path="src/tests/svelte.svelte">Hello world from</Link>
        <Svelte />
        <br />
        <Link path="src/tests/solidjs.tsx">Hello world from</Link>
        <Solid />
        <br />
        <Link path="src/tests/lit.ts">Hello world from</Link>
        <Lit />
        <br />
        <Link path="src/tests/vue.vue">Hello world from</Link>
        <Vue />

        <h1><span>Client</span> Partial-hydrated</h1>
        <Link path="src/tests/preact.tsx">Hello world from</Link>
        <Preact client:load />
        <br />
        <Link path="src/tests/react.tsx">Hello world from</Link>
        <React client:load />
        <br />
        <Link path="src/tests/svelte.svelte">Hello world from</Link>
        <Svelte client:load />
        <br />
        <Link path="src/tests/solidjs.tsx">Hello world from</Link>
        <Solid client:load />
        <br />
        <Link path="src/tests/lit.ts">Hello world from</Link>
        <Lit client:load />
        <br />
        <Link path="src/tests/vue.vue">Hello world from</Link>
        <Vue client:load />

        <h1><span>Client</span> Hydrated</h1>
        <Link path="src/tests/preact.tsx">Hello world from</Link>
        <Preact client:only="preact" />
        <br />
        <Link path="src/tests/react.tsx">Hello world from</Link>
        <React client:only="react" />
        <br />
        <Link path="src/tests/svelte.svelte">Hello world from</Link>
        <Svelte client:only="svelte" />
        <br />
        <Link path="src/tests/solidjs.tsx">Hello world from</Link>
        <Solid client:only="solid" />
        <br />
        <Link path="src/tests/lit.ts">Hello world from</Link>
        <Lit client:only="lit" />
        <br />
        <Link path="src/tests/vue.vue">Hello world from</Link>
        <Vue client:only="vue" />
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: 90ch;
    }
    h1 {
        font-size: 2rem !important;
        font-weight: 800 !important;
        margin-top: 2rem !important;
    }
    span {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
