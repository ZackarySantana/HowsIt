---
import Layout from "@layouts/Layout.astro";

import Alpine from "@alpinejs/interval.astro";
import AstroComponent from "@astro/interval.astro";
import Card from "@components/card.astro";
import SSRCard from "@components/ssr_card.astro";
import Lit from "@lit/interval";
import Preact from "@preact/interval";
import React from "@react/interval";
import Solid from "@solid/interval";
import Svelte from "@svelte/interval.svelte";
import Vue from "@vue/interval.vue";

const example = "interval";

export const prerender = true;
---

<Layout title={`Example - ${example}`}>
    <SSRCard
        type="astro"
        example={example}
    >
        <AstroComponent />
    </SSRCard>
    <SSRCard
        type="alpinejs"
        example={example}
    >
        <Alpine />
    </SSRCard>

    <Card
        type="preact"
        example={example}
    >
        <Preact slot="ssr" />
        <Preact
            slot="ch"
            client:load
        />
        <Preact
            slot="co"
            client:only="preact"
        />
    </Card>
    <Card
        type="react"
        example={example}
    >
        <React slot="ssr" />
        <React
            slot="ch"
            client:load
        />
        <React
            slot="co"
            client:only="react"
        />
    </Card>
    <Card
        type="svelte"
        example={example}
    >
        <Svelte slot="ssr" />
        <Svelte
            slot="ch"
            client:load
        />
        <Svelte
            slot="co"
            client:only="svelte"
        />
    </Card>
    <Card
        type="solid"
        example={example}
    >
        <Solid slot="ssr" />
        <Solid
            slot="ch"
            client:load
        />
        <Solid
            slot="co"
            client:only="solid"
        />
    </Card>
    <Card
        type="lit"
        example={example}
    >
        <Lit slot="ssr" />
        <Lit
            slot="ch"
            client:load
        />
        <Lit
            slot="co"
            client:only="lit"
        />
    </Card>
    <Card
        type="vue"
        example={example}
    >
        <Vue slot="ssr" />
        <Vue
            slot="ch"
            client:load
        />
        <Vue
            slot="co"
            client:only="vue"
        />
    </Card>
</Layout>
