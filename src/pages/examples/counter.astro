---
import Layout from "@layouts/Layout.astro";

import Alpine from "@alpinejs/interval.astro";
import AstroComponent from "@astro/interval.astro";
import Card from "@components/card.astro";
import SSRCard from "@components/ssr_card.astro";
import Lit from "@lit/interval";
import Preact from "@preact/counter";
import Preact2 from "@preact/counter_2";
import React from "@react/counter";
import Solid from "@solid/interval";
import Svelte from "@svelte/counter.svelte";
import Vue from "@vue/counter.vue";

const example = "counter";
Astro.locals.example = example;
const desc = "An interactive counter with a decrement and increment button.";

export const prerender = true;
---

<Layout title={`Example - ${example}`}>
    <h1 class="self-start text-3xl font-bold capitalize text-white">
        {example} Example
    </h1>
    <p class="self-start text-white">{desc}</p>
    <hr class="w-full border-t-2 border-solid border-white" />
    <Card type="react">
        <React slot="ssr" />
        <React
            slot="ch"
            client:load
        />
        <React
            slot="co"
            client:only="react"
        />
    </Card>
    <Card type="solid">
        <Solid slot="ssr" />
        <Solid
            slot="ch"
            client:load
        />
        <Solid
            slot="co"
            client:only="solid"
        />
    </Card>
    <Card
        type="preact"
        metaTitle="(Hooks)"
        exampleInfo={["This component can be done like xyz"]}
    >
        <Preact slot="ssr" />
        <Preact
            slot="ch"
            client:load
        />
        <Preact
            slot="co"
            client:only="preact"
        />
    </Card>
    <Card
        type="preact"
        metaTitle="(Signals)"
        exampleInfo={["This component can be done like xyz"]}
    >
        <Preact2 slot="ssr" />
        <Preact2
            slot="ch"
            client:load
        />
        <Preact2
            slot="co"
            client:only="preact"
        />
    </Card>
    <Card type="svelte">
        <Svelte slot="ssr" />
        <Svelte
            slot="ch"
            client:load
        />
        <Svelte
            slot="co"
            client:only="svelte"
        />
    </Card>
    <Card type="vue">
        <Vue slot="ssr" />
        <Vue
            slot="ch"
            client:load
        />
        <Vue
            slot="co"
            client:only="vue"
        />
    </Card>
    <SSRCard type="astro">
        <AstroComponent />
    </SSRCard>
    <SSRCard type="alpinejs">
        <Alpine />
    </SSRCard>
    <Card
        type="lit"
        metaTitle="(Broken)"
    >
        <Lit slot="ssr" />
        <Lit
            slot="ch"
            client:load
        />
        <Lit
            slot="co"
            client:only="lit"
        />
    </Card>
</Layout>
