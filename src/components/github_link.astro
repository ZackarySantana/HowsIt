---
export interface Props {
    path: string;
    class?: string;
}
import Link from "./link.astro";

const { path, class: className } = Astro.props;

const baseURL = "https://github.com/ZackarySantana/howsit/";

let finalPath = baseURL;

if (path != "") {
    finalPath = baseURL + "blob/main/" + path;
}
---

<Link
    href={finalPath}
    class={className}
>
    <slot />
</Link>
